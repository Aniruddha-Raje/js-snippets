{
  "compilerOptions": {
    "preserveConstEnums": true,
    "inlineSources": true,
    "inlineSourceMap": true,
    "sourceRoot": "/",
    "target": "es2017",
    "outDir": ".build",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["es2017"],
    "rootDir": "./src",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "types": ["jest", "node"],
    "typeRoots": ["node_modules/@types"],
    "importHelpers": true
  }
}
